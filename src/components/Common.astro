---
import Sidebar from '@components/Sidebar/Index.astro'
const { page, frontmatter } = Astro.props
---

<main>
  <div class="inner">
    <slot />
    <Sidebar page={page} frontmatter={frontmatter} />
  </div>
</main>

<style lang="scss">
  main {
    background: linear-gradient(to top, var(--body-bg-shadow) 0, var(--grey-1) 20%) no-repeat bottom;
    display: block;
    > .inner {
      width: $content-desktop;
      align-items: flex-start;
      display: flex;
      flex-direction: row-reverse;
      justify-content: space-between;
      margin: 0 auto;
      @include desktop-large() {
        width: $content-desktop-large;
      }

      @include desktop-largest() {
        width: $content-desktop-largest;
      }
    }
  }
</style>
