<style lang="scss">
  #footer {
    color: var(--grey-5);
    font-size: $font-size-small;
    background: var(--body-bg-shadow);

    .inner {
      margin: 0 auto;
      width: $content-desktop;
      position: relative;
      padding-left: 16.25rem;

      // if (hexo-config('sidebar.position') == 'left') {
      //   padding-left: 16.25rem;
      // }
      // else {
      //   padding-right: 16.25rem;
      // }

      @include desktop-large() {
        width: $content-desktop-large;
      }

      @include desktop-largest() {
        width: $content-desktop-largest;
      }

      @include tablet-mobile {
        padding-left: 0;
        padding-right: 0;
        width: auto;
      }
    }
  }

  .status {
    width: 100%;
    text-align: center;
    margin-top: 2rem;
  }

  .languages {
    display: inline-block;
    font-size: $font-size-large;
    position: relative;

    .lang-select-label span {
      margin: 0 0.5rem;
    }

    .lang-select {
      height: 100%;
      left: 0;
      opacity: 0;
      position: absolute;
      top: 0;
      width: 100%;
    }
  }

  .with-love {
    color: pink;
    display: inline-block;
    margin: 0 0.3125rem 0 0.125rem;
  }

  .powered-by,
  .theme-info {
    display: inline-block;
    margin-bottom: 0.625rem;
  }
</style>
