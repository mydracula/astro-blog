  @keyframes rainbow {
    to {
      background-position: -2000vw;
    }
  }

  #sidebar.affix .tab {
    padding-top: 0.625rem;
  }

  #sidebar .tab {
    position: absolute;
    display: inline-flex;
    padding: 1.875rem 0 0.625rem;
    margin: 0;
    min-height: 1.875rem;

    .item {
      cursor: pointer;
      display: inline-flex;
      font-size: $font-size-small;
      padding: 0.3125rem 0.9375rem;
      color: var(--grey-5);

      border-radius: 0.625rem;
      text-align: center;
      text-decoration: none;
      background-color: rgba(0, 0, 0, 0.08);

      @include the-transition(0.2s, ease-out);

      &:nth-child(2) {
        margin: auto 0.625rem;
      }

      span {
        display: none;
        word-break: keep-all;
      }

      &.active span {
        display: inherit;
      }

      &:hover,
      &.active {
        @extend %color-btn;
      }

      &.active:hover {
        box-shadow: 0 0 0.75rem var(--color-pink);
      }

      &::before {
        @include font-family-icons();
      }

      &.contents::before {
        content: '\f039';
      }

      &.related::before {
        content: '\f0bd';
      }

      &.overview::before {
        content: '\e8ed';
      }

      &.active::before {
        margin-right: 0.3125rem;
      }
    }
  }

